@using System.Web;
@{
    var controllerName = ViewContext.RouteData.Values["Controller"].ToString();
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@if (controllerName == "Home")
{
    <!-- Header -->
    <header id="home">
        <!-- Background Image -->
        <!-- About slider -->
        @await Component.InvokeAsync("Slider")
        <!-- /About slider -->
        <!-- /Background Image -->
        <!-- Nav -->
        <nav id="nav" class="navbar nav-transparent">
            <div class="container">
                <div class="navbar-header">
                    <!-- Logo -->
                    <div class="navbar-brand">
                        <a href="@Url.Action("Index", "Home")">
                            <img class="logo" src="~/Client/img/logo.png" alt="logo">
                            <img class="logo-alt" src="~/Client/img/logo-alt.png" alt="logo">
                        </a>
                    </div>
                    <!-- /Logo -->
                    <!-- Collapse nav button -->
                    <div class="nav-collapse">
                        <span></span>
                    </div>
                    <!-- /Collapse nav button -->
                </div>
                <!--  Main navigation  -->
                <ul class="main-nav nav navbar-nav navbar-right">
                    <li><a asp-action="Index" asp-controller="Home">@Localizer["Home"]</a></li>
                    <li><a href="#about">@Localizer["About"]</a></li>
                    <li><a href="#timeline-wrapper">@Localizer["History"]</a></li>
                    <li><a href="#service">@Localizer["WhatWeDo"]</a></li>
                    <li><a href="#portfolio">@Localizer["OurProduction"]</a></li>
                    <li><a href="#team">@Localizer["Team"]</a></li>
                    <li><a href="#blog">@Localizer["Recruitment"]</a></li>
                    <li><a href="#footer">@Localizer["Contact"]</a></li>
                    <li>
                        @await Html.PartialAsync("_Language")
                    </li>
                </ul>
                <!-- /Main navigation -->
            </div>
        </nav>
        <!-- /Nav -->
    </header>
    <!-- /Header -->
}
