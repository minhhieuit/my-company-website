@model IEnumerable<MVC_Thehegeo.Models.BlogModels.Timeline>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    var count = 0;
}
@using System.Threading;
@using System.Globalization;
@inject IViewLocalizer Localizer
@{
    CultureInfo cultureInfo = Thread.CurrentThread.CurrentCulture;
}
<!-- History -->
<section id="timeline-wrapper" class="section md-padding bg-grey">
    <div class="container-fluid">
        <div class="row">
            <!-- Section header -->
            <div class="section-header text-center">
                <h2 class="title">@Localizer["History"]</h2>
            </div>
            <!-- /Section header -->
            <div class="timeline-top">
                <div class="top-year"><span>2018</span></div>
            </div>
            <div class="timeline-block">
                <div class="timeline-events">
                    <br>
                    @foreach (var item in Model.OrderByDescending(m => m.Id))
                    {
                        count = count + 1;
                        if (count % 2 == 1)
                        {
                            <div class="event l-event col-md-6 col-sm-6 col-xs-8 ">
                                <span class="thumb fa fa-codepen"></span>
                                <div class=" event-body">
                                    <div class="event-content">
                                        @if (cultureInfo.Name == "en")
                                        {
                                            <h5>@item.TitleEN</h5>
                                            <blockquote class="text-muted text-left">
                                                @item.ContentEN<br>
                                            </blockquote>
                                        }
                                        else
                                        {
                                            <h5>@item.TitleVI</h5>
                                            <blockquote class="text-muted text-left">
                                                @item.ContentVI<br>
                                            </blockquote>
                                        }
                                    </div>
                                </div>
                                <!-- end of event body -->
                                <div class="clear-fix"></div>
                            </div>
                            <!-- end of left event -->
                        }
                        else
                        {
                            <div class="row"></div>
                            <div class="event r-event col-md-6 col-sm-6 col-xs-8 ">
                                <span class="thumb fa fa-codepen"></span>
                                <div class=" event-body">
                                    <div class="event-content">
                                        @if (cultureInfo.Name == "en")
                                        {
                                            <h5>@item.TitleEN </h5>
                                            <blockquote class="text-muted text-left">
                                                @item.ContentEN<br>
                                            </blockquote>
                                        }
                                        else
                                        {
                                            <h5>@item.TitleVI </h5>
                                            <blockquote class="text-muted text-left">
                                                @item.ContentVI<br>
                                            </blockquote>
                                        }
                                    </div>
                                </div>
                            </div>
                            <!-- end of right event <-->
                            <div class="clearfix"></div>
                        }
                    }
                    </-->
                </div>
                <!-- end of timeline events -->
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</section>
<!-- History -->