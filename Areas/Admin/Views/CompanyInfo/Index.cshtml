@model IEnumerable<MVC_Thehegeo.Models.BlogModels.CompanyInfo>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>List categories</h5>
                
                <div class="ibox-tools">
                    @if(Model.Count() == 2)
                    {

                    }
                    else
                    {
                        <a asp-action="Create" class="fa fa-plus"></a>
                    }
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="#">Config option 1</a>
                        </li>
                        <li><a href="#">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example" >
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>GoolgePlusLink</th>
                            <th>TwitterLink</th>
                            <th>FacebookLink</th>
                            <th>YoutubeLink</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="gradeX">
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.AddressVI)</td>
                            <td>@Html.DisplayFor(modelItem => item.GoolgePlusLink)</td>
                            <td>@Html.DisplayFor(modelItem => item.TwitterLink)</td>
                            <td>@Html.DisplayFor(modelItem => item.FacebookLink)</td>
                            <td>@Html.DisplayFor(modelItem => item.YoutubeLink)</td>
                            <td class="center"><a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i> Edit</a></td>
                            <td class="center"><a asp-action="Delete" asp-route-id="@item.Id" class="btnDelete"><i class="fa fa-remove"></i> Delete</a></td>
                        </tr>
                        }
                    </tbody>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>GoolgePlusLink</th>
                                <th>TwitterLink</th>
                                <th>FacebookLink</th>
                                <th>YoutubeLink</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>