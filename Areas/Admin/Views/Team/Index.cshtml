@model IEnumerable<MVC_Thehegeo.Models.BlogModels.TeamInfo>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>List service company</h5>
                
                <div class="ibox-tools">
                    <a asp-action="Create" class="fa fa-plus"></a>
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="#">Config option 1</a>
                        </li>
                        <li><a href="#">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example" >
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>FullName</th>
                            <th>Function</th>
                            <th>Email</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="gradeX">
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.FullNameVI)</td>
                            <td>@Html.DisplayFor(modelItem => item.FunctionVI)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td class="center"><a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i> Edit</a></td>
                            <td class="center"><a asp-action="Delete" asp-route-id="@item.Id" class="btnDelete"><i class="fa fa-remove"></i> Delete</a></td>
                        </tr>
                        }
                    </tbody>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>FullName</th>
                                <th>Function</th>
                                <th>Email</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
